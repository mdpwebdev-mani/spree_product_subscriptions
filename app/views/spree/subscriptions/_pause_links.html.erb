<% if @subscription.paused? %>
<%= link_to Spree.t(:unpause), spree.unpause_subscription_path(@subscription), method: :patch, class: 'btn-danger btn', data: { confirm: Spree.t("subscriptions.confirm.activate") } %>
<% else %>
  <%= link_to Spree.t(:pause), spree.pause_subscription_path(@subscription), method: :patch, class: 'btn-danger btn', data: { confirm: Spree.t("subscriptions.confirm.pause") } %>
<% end %>